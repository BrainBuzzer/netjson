{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/",
    "type": "object",
    "additionalProperties": true,
    "required": [
        "type",
        "protocol",
        "version",
        "metric",
        "nodes",
        "links"
    ],
    "properties": {
        "type": {
            "id": "type",
            "type": "string",
            "default": "NetworkGraph",
            "pattern": "NetworkGraph"
        },
        "protocol": {
            "id": "protocol",
            "type": "string"
        },
        "version": {
            "id": "version",
            "type": "string"
        },
        "revision": {
            "id": "revision",
            "type": "string"
        },
        "metric": {
            "id": "metric",
            "type": "string"
        },
        "router_id": {
            "id": "router_id",
            "type": "string"
        },
        "topology_id": {
            "id": "topology_id",
            "type": "string"
        },
        "label": {
            "id": "label",
            "type": "string"
        },
        "nodes": {
            "id": "nodes",
            "type": "array",
            "title": "Nodes",
            "uniqueItems": true,
            "additionalItems": true,
            "items": [
                {
                    "title": "Node",
                    "type": "object",
                    "additionalProperties": true,
                    "required": [
                        "id"
                    ],
                    "properties": {
                        "id": {
                            "id": "id",
                            "type": "string"
                        },
                        "label": {
                            "id": "label",
                            "type": "string"
                        },
                        "local_addresses": {
                            "id": "local_addresses",
                            "type": "array",
                            "items": [
                                {
                                    "id": "0",
                                    "type": "string"
                                },
                                {
                                    "id": "1",
                                    "type": "string"
                                }
                            ]
                        },
                        "properties": {
                            "id": "properties",
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            ]
        },
        "links": {
            "id": "links",
            "type": "array",
            "title": "Links",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "type": "object",
                "title": "Link",
                "additionalProperties": true,
                "required": [
                    "source",
                    "target",
                    "cost"
                ],
                "properties": {
                    "source": {
                        "id": "source",
                        "type": "string"
                    },
                    "target": {
                        "id": "target",
                        "type": "string"
                    },
                    "cost": {
                        "id": "cost",
                        "type": "integer",
                        "default": 1
                    },
                    "cost_text": {
                        "id": "cost_text",
                        "type": "string"
                    },
                    "properties": {
                        "id": "properties",
                        "type": "object",
                        "additionalProperties": true
                    }
                }
            }
        }
    }
}
